def int_input():
    return int(input())

def map_input():
    return map(int, input().split())

def list_input():
    return list(map(int, input().split()))

def string_input():
    return input()

def list_of_strings():
    return input().split()

n, k = map_input()
arr = list_input()

if k == 1:
    print(arr[-1] - arr[0])
else:
    diff = []
    for i in range(n - 1):
        diff.append(arr[i + 1] - arr[i])

    diff.sort(reverse = True)
    
    total = arr[-1] - arr[0]
    temp = sum(diff[:k - 1])

    print(total - temp)

